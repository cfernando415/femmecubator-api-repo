{
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "key-spacing": [
      "error",
      {
        "multiLine": {
          "beforeColon": false,
          "afterColon": true,
          "mode": "strict"
        }
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": 0,
    "no-cond-assign": ["error", "always"],
    "no-console": ["warn"],
    "no-undef-init": ["error"],
    "no-unused-vars": ["warn"],
    "no-multiple-empty-lines": "error",
    "semi": ["error", "always"],
    "no-var": ["error"],
    "prefer-const": ["error"]
  }
}
